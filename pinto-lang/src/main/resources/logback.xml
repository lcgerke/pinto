<configuration>

	<appender name="PINTO" class="tech.pinto.tools.LogAppender">
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder 
			by default -->
		<encoder>
			<pattern> %-5level %logger{22} %line - %msg%n</pattern>
		</encoder>
	</appender>


	<!--<logger name="org.springframework" level="debug" />
	<logger name="com.lcgerke.springbase" level="trace" />-->

	<root level="trace">
		<appender-ref ref="PINTO" />
	</root>
</configuration>